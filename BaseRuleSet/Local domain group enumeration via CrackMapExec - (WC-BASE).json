{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/95bb98cb-3521-4a61-af28-ba0ed8af5c39')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/95bb98cb-3521-4a61-af28-ba0ed8af5c39')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Local domain group enumeration via CrackMapExec - [WC-BASE]",
                                             "description":  "Detects scenarios where an attacker attempts to enumerate domain local groups with tools like CME (--local-groups). Source can be identified by correlating TargetLogonId from ID 4624 with SubjectLogonId from ID 4661. Requires extended rights auditing enabled (https://www.manageengine.com/products/active-directory-audit/active-directory-auditing-configuration-guide-configure-object-level-auditing-manually.html)",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "let GetEntity = SecurityEvent | where ((EventID == 4661 and ProcessName endswith @'\\lsass.exe' and ObjectServer =~ 'Security Account Manager' and ObjectType =~ 'SAM_ALIAS' and (ObjectName startswith 'S-1-5-32-' or ObjectName startswith 'S-1-5-21-')) and (SubjectUserName !endswith '$')) | summarize count() by IpAddress | where count_ \u003e 30;\r\nSecurityEvent\r\n| where ((EventID == 4661 and ProcessName endswith @'\\lsass.exe' and ObjectServer =~ 'Security Account Manager' and ObjectType =~ 'SAM_ALIAS' and (ObjectName startswith 'S-1-5-32-' or ObjectName startswith 'S-1-5-21-')) and (SubjectUserName !endswith '$'))\r\n| join kind=inner GetEntity on IpAddress",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Discovery"
                                                         ],
                                             "techniques":  [
                                                                "T1615"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  true,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "AccountName"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "Computer"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "IpAddress"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}