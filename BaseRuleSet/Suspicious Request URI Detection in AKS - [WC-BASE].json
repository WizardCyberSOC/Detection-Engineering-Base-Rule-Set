{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId(\u0027Microsoft.OperationalInsights/workspaces/providers\u0027, parameters(\u0027workspace\u0027), \u0027Microsoft.SecurityInsights\u0027),\u0027/alertRules/c0eb518e-0290-4bb0-b998-83f1382a173d\u0027)]",
                          "name":  "[concat(parameters(\u0027workspace\u0027),\u0027/Microsoft.SecurityInsights/c0eb518e-0290-4bb0-b998-83f1382a173d\u0027)]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Suspicious Request URI Detection in AKS - [WC-BASE]",
                                             "description":  "This rule detects potentially malicious or suspicious requests to Kubernetes API resources by identifying suspicious patterns (such as encoded characters or special characters) in the RequestURI. It filters external requests from non-private IPs and checks for suspicious payloads commonly used in attacks, such as injections or encoding anomalies. The rule helps detect potential exploitation attempts in real-time by analyzing the request patterns logged in the AKS kube-audit-admin logs.",
                                             "severity":  "Low",
                                             "enabled":  true,
                                             "query":  "let SuspiciousRegex = @\u0027(\\\\$|%24|{|%7B|}|%7D|\\\\^|%5E|`|%60|\u003c|%3C|\u003e|%3E|;|%3B|\\\\(|%28|\\\\)|%29)\u0027;\r\nAzureDiagnostics\r\n| where TimeGenerated \u003e ago(15m)\r\n| extend log_s = column_ifexists(\"log_s\",\"\")\r\n| where Category == \"kube-audit-admin\"\r\n| extend SourceIP = tostring(parse_json(log_s).sourceIPs.[0])\r\n| where not( ipv4_is_private( SourceIP))\r\n| extend ResponseStatus = tostring(parse_json(log_s).responseStatus.code)\r\n| extend RequestURI = tostring(parse_json(log_s).requestURI)\r\n| where RequestURI matches regex SuspiciousRegex\r\n| where ResponseStatus !startswith \"4\"",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "CommandAndControl",
                                                             "Persistence"
                                                         ],
                                             "techniques":  [
                                                                "T1071",
                                                                "T1525"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  {

                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "SourceIP"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "File",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "requestUri_s"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "File",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "ResponseStatus"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
