{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/a6f521c2-a68b-4dca-a490-a8be9b1b6e3a')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/a6f521c2-a68b-4dca-a490-a8be9b1b6e3a')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Potential Schedule task anomaly - [WC-BASE]",
                                             "description":  "This detection identifies potentially malicious scheduled tasks used to exfiltrate data. It correlates the creation or modification of scheduled tasks with access to sensitive files (e.g., archives, documents, spreadsheets) followed by outbound network connectionsâ€”all within a 10-minute window. This behavior may indicate an automated exfiltration mechanism via scheduled tasks.",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "let ScheduledTaskExecutions = SecurityEvent\r\n| where EventID in (4698, 4699)  \r\n| project\r\n    TaskTime = TimeGenerated,\r\n    Computer,\r\n    Account = SubjectUserName,\r\n    TaskName = tostring(parse_xml(EventData).EventData.Data[0]),\r\n    TaskPath = tostring(parse_xml(EventData).EventData.Data[5]);\r\nlet FileAccessEvents = SecurityEvent\r\n| where EventID == 4663  \r\n| where ObjectName endswith \".zip\" or ObjectName endswith \".7z\" or ObjectName endswith \".rar\" \r\n    or ObjectName endswith \".docx\" or ObjectName endswith \".xlsx\" or ObjectName endswith \".pdf\" \r\n| project\r\n    FileAccessTime = TimeGenerated,\r\n    Computer,\r\n    ObjectName,  \r\n    AccountName = SubjectUserName,\r\n    AccessType = tostring(parse_xml(EventData).EventData.Data[10]);\r\nlet NetworkActivity = SecurityEvent\r\n| where EventID == 5156  \r\n| project\r\n    NetworkEventTime = TimeGenerated,\r\n    Computer,\r\n    DestinationIp = tostring(parse_xml(EventData).EventData.Data[3]),\r\n    DestinationPort = tostring(parse_xml(EventData).EventData.Data[4]),\r\n    Protocol = tostring(parse_xml(EventData).EventData.Data[5]),\r\n    InitiatingProcessAccountName = SubjectUserName;\r\nFileAccessEvents\r\n| join kind=inner (ScheduledTaskExecutions) on Computer\r\n| where FileAccessTime \u003e= TaskTime and FileAccessTime \u003c TaskTime + 10m \r\n| join kind=inner (NetworkActivity) on Computer\r\n| where NetworkEventTime \u003e= FileAccessTime and NetworkEventTime \u003c FileAccessTime + 10m \r\n| project\r\n    TimeGenerated = FileAccessTime,\r\n    Computer,\r\n    AccountName,\r\n    ObjectName,\r\n    DestinationIp,\r\n    DestinationPort,\r\n    Protocol,\r\n    TaskName,\r\n    TaskPath\r\n| order by TimeGenerated desc",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Exfiltration"
                                                         ],
                                             "techniques":  [
                                                                "T1029"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  {
                                                                          "alertDynamicProperties":  [

                                                                                                     ]
                                                                      },
                                             "customDetails":  {

                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "Computer"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "DestinationIp"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}