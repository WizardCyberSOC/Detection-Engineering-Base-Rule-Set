{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/0790ed78-99f3-4556-ac1d-71aa6bf00637')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/0790ed78-99f3-4556-ac1d-71aa6bf00637')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Remove Group member using Powershell - [WC-BASE-W]",
                                             "description":  "Detects the removal of a group member using Powershell.",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "AuditLogs\r\n| where AdditionalDetails[0].value contains \"PowerShell\"\r\n| where OperationName == \"Remove member from group\"\r\n| extend DeletedUser = TargetResources[0].userPrincipalName\r\n| extend IPAddress = tostring(InitiatedBy.ipAddress)\r\n// WHITELIST START\r\n| extend RuleName = 'Remove Group member using Powershell'\r\n| join kind=leftouter (_GetWatchlist('WizardCyberAnalyticalRulesTuning')\r\n) on RuleName\r\n| project-away RuleName,RuleName1\r\n| extend Tuning01 = todynamic(Tuning01)\r\n| where not(  (TicketIDs contains \"3017891\" and isnotempty(Tuning01)) and tostring( parse_json(InitiatedBy.app).servicePrincipalId) == Tuning01.[0]  )\r\n| project-away Tuning*,TicketIDs\r\n// WHITELIST END\r\n",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "PT1H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Impact"
                                                         ],
                                             "techniques":  [
                                                                "T1531"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
