{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/c95112af-fca4-4881-99ca-04a7ca3b0e8d')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/c95112af-fca4-4881-99ca-04a7ca3b0e8d')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "PowerShell Suspicious Script with Audio Capture Capabilities - [WC-BASE]",
                                             "description":  "Detects potentially malicious PowerShell scripts attempting to access microphone input or audio capture capabilities. This behavior is commonly associated with post-exploitation frameworks or surveillance-oriented payloads. The rule filters known benign PowerSploit testing artifacts and system accounts to reduce false positives.",
                                             "severity":  "Low",
                                             "enabled":  true,
                                             "query":  "DeviceEvents\r\n|where ActionType == \"PowerShellCommand\"\r\n| where (\r\n    ProcessCommandLine contains \"Get-MicrophoneAudio\" or\r\n    ProcessCommandLine contains \"WindowsAudioDevice-Powershell-Cmdlet\" or\r\n    (ProcessCommandLine contains \"waveInGetNumDevs\" and ProcessCommandLine contains \"mciSendStringA\")\r\n)\r\n| where not (\r\n    ProcessCommandLine contains \"sentinelbreakpoints\" and \r\n    ProcessCommandLine contains \"Set-PSBreakpoint\" and \r\n    ProcessCommandLine contains \"PowerSploitIndicators\"\r\n)\r\n| where AccountSid != \"S-1-5-18\"",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Collection"
                                                         ],
                                             "techniques":  [
                                                                "T1123"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "AccountName"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "HostName",
                                                                                                  "columnName":  "DeviceName"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}