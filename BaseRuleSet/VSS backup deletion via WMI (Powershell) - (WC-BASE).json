    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/5041ee68-ef8a-4fbc-b286-3d898d200eec')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/5041ee68-ef8a-4fbc-b286-3d898d200eec')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "VSS backup deletion via WMI (Powershell) - [WC-BASE]",
                                             "description":  "Detects scenarios where an attacker attempts to delete existing VSS backup via WMI.",
                                             "severity":  "High",
                                             "enabled":  true,
                                             "query":  "DeviceEvents | where ActionType == \"PowerShellCommand\"  | where (((AdditionalFields contains \"Get-WmiObject\" or AdditionalFields contains \"Gwmi\" or AdditionalFields contains \"Get-CimInstance\" or AdditionalFields contains \"Gcim\") or (InitiatingProcessCommandLine contains \"Get-WmiObject\" or InitiatingProcessCommandLine contains \"Gwmi\" or InitiatingProcessCommandLine contains \"Get-CimInstance\" or InitiatingProcessCommandLine contains \"Gcim\")) and (AdditionalFields contains \"Win32_Shadowcopy\" or InitiatingProcessCommandLine contains \"Win32_Shadowcopy\") and ((AdditionalFields contains \"Delete\" or AdditionalFields contains \"Remove-WmiObject\" or AdditionalFields contains \"rwmi\" or AdditionalFields contains \"Remove-CimInstance\" or AdditionalFields contains \"rcim\") or (InitiatingProcessCommandLine contains \"Delete\" or InitiatingProcessCommandLine contains \"Remove-WmiObject\" or InitiatingProcessCommandLine contains \"rwmi\" or InitiatingProcessCommandLine contains \"Remove-CimInstance\" or InitiatingProcessCommandLine contains \"rcim\")))\n",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
