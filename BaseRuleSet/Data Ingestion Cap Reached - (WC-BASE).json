{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/621e425c-3500-4844-a5a0-98cc8d27343a')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/621e425c-3500-4844-a5a0-98cc8d27343a')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Data Ingestion Cap Reached - [WC-BASE]",
                                             "description":  "In Azure Sentinel, data ingestion cap refers to the limit on the amount of data that can be ingested into the service within a specified period of time, typically on a daily basis. This limit is designed to help ensure that the service remains performant and scalable, and to prevent excessive data ingestion that could impact the cost and performance of the service.",
                                             "severity":  "Low",
                                             "enabled":  true,
                                             "query":  "_LogOperation\r\n| where Detail == \"Data collection stopped due to daily limit of free data reached. Ingestion status = OverQuota\"\r\n| extend CustomEntity = strcat(\r\n    \"Time: \", format_datetime(TimeGenerated, 'dd-MM-yyyy hh:mm:ss'),\r\n    \"\\nCategory: \", Category,\r\n    \"\\nLevel: \", Level,\r\n    \"\\nDetail: \", Detail\r\n    )\r\n",
                                             "queryFrequency":  "PT15M",
                                             "queryPeriod":  "PT15M",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Impact"
                                                         ],
                                             "techniques":  [
                                                                "T0826"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  {
                                                                   "CustomEntity":  "CustomEntity"
                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "HostName",
                                                                                                  "columnName":  "Computer"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}