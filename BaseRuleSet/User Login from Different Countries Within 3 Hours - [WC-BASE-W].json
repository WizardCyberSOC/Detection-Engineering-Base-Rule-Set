{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId(\u0027Microsoft.OperationalInsights/workspaces/providers\u0027, parameters(\u0027workspace\u0027), \u0027Microsoft.SecurityInsights\u0027),\u0027/alertRules/42718c04-51b3-4b7f-8511-0c19252ea44b\u0027)]",
                          "name":  "[concat(parameters(\u0027workspace\u0027),\u0027/Microsoft.SecurityInsights/42718c04-51b3-4b7f-8511-0c19252ea44b\u0027)]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "User Login from Different Countries Within 3 Hours - [WC-BASE-W]",
                                             "description":  "Detects successful user logins from different countries within 3 hours, where at least one state hasn\u0027t been logged in from before in the last 2 weeks.",
                                             "severity":  "Low",
                                             "enabled":  true,
                                             "query":  "let timeframe = ago(3h);\r\nlet threshold = 2;\r\nlet IPManagedAttempts = SigninLogs\r\n    | union AADNonInteractiveUserSignInLogs\r\n    | where TimeGenerated \u003e ago(14d)\r\n    | where isnotempty(DeviceDetail_dynamic.deviceId) or isnotempty(tostring(parse_json(DeviceDetail_string).deviceId))\r\n    | distinct IPAddress;\r\nlet KnownLocations = SigninLogs\r\n    | where TimeGenerated between (ago(14d) .. ago(3h))\r\n    | where isnotempty(Location)\r\n    | where isnotempty(LocationDetails.state)\r\n    | where ResultType == 0\r\n    | summarize\r\n        UserKnownLocations = make_set(Location),\r\n        UserKnownStates = make_set(LocationDetails.state)\r\n        by UserPrincipalName;\r\nlet alerttable =\r\n    SigninLogs\r\n    | where ResultType == 0\r\n    | where TimeGenerated \u003e timeframe\r\n    | where isnotempty(Location)\r\n    | where isnotempty(LocationDetails.state)\r\n    | extend State = tostring(LocationDetails.state)\r\n    | join kind=leftouter KnownLocations on UserPrincipalName\r\n    | where (UserKnownLocations has Location)\r\n    | summarize\r\n        StartTime = min(TimeGenerated),\r\n        EndTime = max(TimeGenerated),\r\n        Countries = make_set(Location)\r\n        by UserPrincipalName\r\n    | extend NumOfCountries = array_length(Countries)\r\n    | where NumOfCountries \u003e= threshold;\r\nlet LocationDetails = SigninLogs\r\n    | where ResultType == 0\r\n    | where TimeGenerated \u003e timeframe\r\n    | where isnotempty(Location)\r\n    | where isnotempty(LocationDetails.state)\r\n    | join kind=inner alerttable on $left.UserPrincipalName == $right.UserPrincipalName\r\n    | extend State = tostring(LocationDetails.state)\r\n    | summarize\r\n        Applications = make_set(AppDisplayName),\r\n        AuthenticationType = make_set(AuthenticationRequirement),\r\n        Device = make_set(DeviceDetail),\r\n        RiskEvent= make_set(RiskEventTypes),\r\n        RiskEventV2 = make_set(RiskEventTypes_V2)\r\n        by UserPrincipalName, IPAddress, State, Location;\r\nalerttable\r\n| join kind=inner LocationDetails on UserPrincipalName\r\n| join kind=leftouter KnownLocations on UserPrincipalName\r\n| project-reorder\r\n    StartTime,\r\n    EndTime,\r\n    UserPrincipalName,\r\n    NumOfCountries,\r\n    Countries,\r\n    Location,\r\n    State,\r\n    UserKnownLocations,\r\n    UserKnownStates,\r\n    IPAddress,\r\n    Applications,\r\n    AuthenticationType,\r\n    Device,\r\n    RiskEvent,\r\n    RiskEventV2\r\n| project-away UserPrincipalName1, UserPrincipalName2\r\n| where (UserKnownStates !has State)\r\n| join kind=leftanti IPManagedAttempts on IPAddress\r\n// WHITELIST START\r\n| extend RuleName = \u0027User Login from Different Countries Within 3 Hours\u0027\r\n| join kind=leftouter (_GetWatchlist(\u0027WizardCyberAnalyticalRulesTuning\u0027)\r\n) on RuleName\r\n| project-away RuleName,RuleName1\r\n| extend Tuning01 = todynamic(Tuning01)\r\n| where not(  (TicketIDs contains \"3017890\" and isnotempty(Tuning01)) and UserPrincipalName !endswith Tuning01.[0] )\r\n| project-away Tuning*,TicketIDs\r\n// WHITELIST END\r\n",
                                             "queryFrequency":  "PT3H",
                                             "queryPeriod":  "P14D",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "InitialAccess"
                                                         ],
                                             "techniques":  [
                                                                "T1078"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  true,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  {
                                                                          "alertDynamicProperties":  [

                                                                                                     ]
                                                                      },
                                             "customDetails":  {
                                                                   "Country":  "Location",
                                                                   "State":  "State"
                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "UserPrincipalName"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "IPAddress"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "Device"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}