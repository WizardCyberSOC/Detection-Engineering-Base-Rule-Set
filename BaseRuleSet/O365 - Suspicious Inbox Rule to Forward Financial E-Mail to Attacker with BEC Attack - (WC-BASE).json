{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/a3ae53ef-fdfd-4a76-ae1a-ed10098d59ae')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/a3ae53ef-fdfd-4a76-ae1a-ed10098d59ae')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "O365 - Suspicious Inbox Rule to Forward Financial E-Mail to Attacker with BEC Attack - [WC-BASE]",
                                             "description":  "This query detects the creation of an inbox rule in O365 used to forward financial emails to an attacker controlled mailbox. It was discovered by Microsoft 365 Defender researchers as part of a large-scale business email compromise (BEC) that affected multiple organizations",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "let GetTenantDomain= \r\nEmailEvents\r\n| where EmailDirection == \"Inbound\"\r\n| extend TenantDomain = tostring(split(RecipientEmailAddress,\"@\",1).[0])\r\n| summarize count() by TenantDomain\r\n| order by count_ desc \r\n| take 3\r\n| project TenantDomain;\r\nOfficeActivity \r\n| where ((Operation contains 'New-InboxRule' and (* contains 'invoice' or * contains 'payment' or * contains 'statement')) and (parse_json(Parameters).Value !in (GetTenantDomain)))",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "PT1H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Exfiltration",
                                                             "Collection"
                                                         ],
                                             "techniques":  [
                                                                "T1114",
                                                                "T1020"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "UserId"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "ClientIP"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "Mailbox",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "MailboxPrimaryAddress",
                                                                                                  "columnName":  "MailboxOwnerUPN"
                                                                                              },
                                                                                              {
                                                                                                  "identifier":  "ExternalDirectoryObjectId",
                                                                                                  "columnName":  "DestMailboxOwnerUPN"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}