{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/3f9dbebe-1626-4019-b4fb-8570c3d5e717')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/3f9dbebe-1626-4019-b4fb-8570c3d5e717')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Fortinet - Botnet Identified and Allowed - [WC-BASE]",
                                             "description":  "Botnet Traffic detected and allowed by Fortigate",
                                             "severity":  "High",
                                             "enabled":  true,
                                             "query":  "CommonSecurityLog\n| where DeviceVendor contains \"Fortinet\" and DeviceProduct contains \"Fortigate\"\n| where DeviceAction contains \"accept\" and Activity contains \"forward accept\"\n| where IndicatorThreatType has \"Botnet\"\n| extend AcceptTime = TimeGenerated\n| join kind=leftouter  (CommonSecurityLog\n        | where DeviceAction !contains \"accept\"\n        | extend CloseTime = TimeGenerated)\n        on MaliciousIP\n    | where isnull( CloseTime) or  CloseTime \u003e AcceptTime\n    | summarize arg_min(CloseTime,*) by MaliciousIP\n    | where (CloseTime \u003e= AcceptTime + 10m) or isnull( CloseTime)",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "PT1H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "ResourceDevelopment"
                                                         ],
                                             "techniques":  [
                                                                "T1584",
                                                                "T1583"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  {

                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "MaliciousIP"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}