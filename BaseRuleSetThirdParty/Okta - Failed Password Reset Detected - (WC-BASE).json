{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ad4c3d6f-e930-4228-addd-14df4b4b4cdc')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ad4c3d6f-e930-4228-addd-14df4b4b4cdc')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Okta - Failed Password Reset Detected - [WC-BASE]",
                                             "description":  "This rule detects failed password reset attempts in Okta logs. Failure reason can be due to the following reasons:\n1) Invalid credentials\n2) Answering the recovery question incorrectly",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "let InvalidRecoveryQuestionUsers = \r\nOkta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where eventType_s == \"user.account.reset_password\" and outcome_result_s contains \"FAILURE\" and outcome_reason_s contains \"User answered recovery question invalid\"\r\n| summarize FailureCount = count() by actor_alternateId_s\r\n| where FailureCount \u003e 2;\r\nlet InvalidRecoveryQuestionLogs = \r\nOkta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where eventType_s == \"user.account.reset_password\" and outcome_result_s contains \"FAILURE\" and outcome_reason_s contains \"User answered recovery question invalid\"\r\n| join kind=inner InvalidRecoveryQuestionUsers on actor_alternateId_s\r\n| project-away actor_alternateId_s1\r\n| extend Case = \"User answered recovery question invalid\";\r\nlet InvalidCredentialsUsers =\r\nOkta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where eventType_s == \"user.account.reset_password\" and outcome_result_s contains \"FAILURE\" and outcome_reason_s contains \"INVALID_CREDENTIALS\"\r\n| summarize FailureCount = count() by actor_alternateId_s\r\n| where FailureCount \u003e 2;\r\nOkta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where eventType_s == \"user.account.reset_password\" and outcome_result_s contains \"FAILURE\" and outcome_reason_s contains \"INVALID_CREDENTIALS\"\r\n| join kind=inner InvalidCredentialsUsers on actor_alternateId_s\r\n| project-away actor_alternateId_s1\r\n| extend Case = \"Invalid Credentials\"\r\n| union InvalidRecoveryQuestionLogs",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "PT1H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "Persistence"
                                                         ],
                                             "techniques":  [
                                                                "T1098",
                                                                "T0859"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "actor_alternateId_s"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
