{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/21248781-37b7-4616-82b4-06943830afeb')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/21248781-37b7-4616-82b4-06943830afeb')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Okta - Possible Successful Password Spray Attack - [WC-BASE]",
                                             "description":  "This rule identifies instances where two or more users from the same IP address enter incorrect passwords, followed by a successful sign-in or correct password entry from the same IP.",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "// Step 1: Identify IPs with multiple failed logins (potential password spray)\r\nlet PasswordSprayIP = Okta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where outcome_result_s == \"FAILURE\"\r\n| where outcome_reason_s == \"INVALID_CREDENTIALS\"\r\n| summarize NumberOfUsers = dcount(actor_alternateId_s) by client_ipAddress_s\r\n| where NumberOfUsers \u003e 1; // Adjust threshold as needed\r\n// Step 2: Get familiar IPs seen with successful logins in the past 14d (excluding the last hour)\r\nlet FamiliarIP = Okta_CL\r\n| where TimeGenerated between (ago(14d) .. ago(1h))\r\n| where outcome_result_s == \"SUCCESS\"\r\n| distinct client_ipAddress_s;\r\n// Step 3: Find successful logins in last hour that came from suspicious IPs AND are not familiar\r\nlet PossibleSuccessfulPasswordSpray = Okta_CL\r\n| where TimeGenerated \u003e ago(1h)\r\n| where outcome_result_s == \"SUCCESS\"\r\n| join kind=inner (\r\n    PasswordSprayIP\r\n) on $left.client_ipAddress_s == $right.client_ipAddress_s\r\n| join kind=leftanti (\r\n    FamiliarIP\r\n) on $left.client_ipAddress_s == $right.client_ipAddress_s\r\n| project \r\n    TimeGenerated,\r\n    UserPrincipalName = actor_alternateId_s,\r\n    IPAddress = client_ipAddress_s,\r\n    City = client_geographicalContext_city_s,\r\n    State = client_geographicalContext_state_s,\r\n    Country = client_geographicalContext_country_s,\r\n    EventType = eventType_s,\r\n    Outcome = outcome_result_s,\r\n    Reason = outcome_reason_s,\r\n    UserAgent = client_userAgent_rawUserAgent_s,\r\n    OS = client_userAgent_os_s,\r\n    Browser = client_userAgent_browser_s,\r\n    ISP = securityContext_isp_s,\r\n    AuthStep = authenticationContext_authenticationStep_d;\r\nPossibleSuccessfulPasswordSpray\r\n",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "P14D",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "InitialAccess",
                                                             "CredentialAccess"
                                                         ],
                                             "techniques":  [
                                                                "T1078",
                                                                "T1110"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  {
                                                                   "Location":  "Country",
                                                                   "ResultType":  "Outcome"
                                                               },
                                             "entityMappings":  [
                                                                    {
                                                                        "entityType":  "Account",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Name",
                                                                                                  "columnName":  "UserPrincipalName"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "IP",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Address",
                                                                                                  "columnName":  "IPAddress"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "OS"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}