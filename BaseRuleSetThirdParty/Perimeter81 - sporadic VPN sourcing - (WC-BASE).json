                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Perimeter81 - sporadic VPN sourcing - [WC-BASE]",
                                             "description":  "Identifies sporadic Perimeter81 VPN events based on source IP, where in the distinct IP count represents more than half of the total events",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "Perimeter81_CL\r\n| summarize count(), min(TimeGenerated), max(TimeGenerated), dcount(ip_s), make_set(gateway_ip_s), make_set(gateway_dns_s), make_set(network_name_s), make_set(eventName_s), make_set(device_hostname_s), make_set(ip_s) by releasedBy_email_s\r\n| where count_ \u003e 10\r\n| where count_/dcount_ip_s \u003c 2//sporadic sourcing identification\r\n| where max_TimeGenerated \u003e ago(65m)",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "P4D",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
