{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/876cc26d-fb6a-495a-b368-0059a2ba6f0b')]",
                          "name":  "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/876cc26d-fb6a-495a-b368-0059a2ba6f0b')]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "F5 - Possible Password Spray - [WC-BASE]",
                                             "description":  "This rule will detect when an adversary compromises user credentials and attempts to exploit password reuse by conducting a password spray attack. The attack may target a list of users, either from a randomly generated wordlist or one specifically created by the attacker",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "F5Perimeter\r\n|where EventType contains \"authpriv\"\r\n|where Action contains \"User Not Found\"\r\n| summarize AlertCount = count() by Computer, bin(TimeGenerated, 5m), Action\r\n| where AlertCount \u003e= 20 ",
                                             "queryFrequency":  "PT2H",
                                             "queryPeriod":  "PT2H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "CredentialAccess"
                                                         ],
                                             "techniques":  [
                                                                "T1110"
                                                            ],
                                             "subTechniques":  [

                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "SingleAlert"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  null,
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}